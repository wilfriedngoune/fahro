<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="35dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header: title + edit icon -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profileTitle"
                android:text="Profile"
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/buttonEditProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="#004CD8" />
        </LinearLayout>

        <!-- Centered avatar + name + rating + balance -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_avatar_round"
                android:src="@drawable/ic_profile" />

            <!-- Name + rating -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/userName"
                    android:text="Wilfried"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/userRatingStar"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star_yellow" />

                    <TextView
                        android:id="@+id/userRatingText"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:textColor="#FFA000"
                        android:text="4.9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/userBalance"
                android:text="23,54 €"
                android:textSize="16sp"
                android:textColor="#004CD8"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- SECTION 1 : Personal Information -->
        <TextView
            android:text="Personal Information"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/personalInfoBox"
            android:orientation="vertical"
            android:background="@drawable/bg_box_gray_rounded"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/infoName"
                android:text="Name: Wilfried"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoEmail"
                android:text="Email: wilfried@example.com"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoPhone"
                android:text="Phone: +49 123 456789"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoCar"
                android:text="Car: VW Golf, Blue"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoAddress"
                android:text="Address: Berliner Str. 23, 38106 Braunschweig"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/infoDescription"
                android:text="Description: I love sharing trips with students."
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Verified badge -->
            <TextView
                android:id="@+id/infoVerified"
                android:text="Verified profile ✓"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- SECTION 2 : Settings -->
        <TextView
            android:text="Settings"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/settingsBox"
            android:orientation="vertical"
            android:background="@drawable/bg_box_gray_rounded"
            android:padding="16dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Theme row -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Theme"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Switch
                    android:id="@+id/switchTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dark mode" />
            </LinearLayout>

            <!-- Policy link -->
            <TextView
                android:id="@+id/textPolicy"
                android:text="Policy and use conditions"
                android:textColor="#004CD8"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- App version -->
            <TextView
                android:id="@+id/textAppVersion"
                android:text="App version: 1.1.0"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- SECTION 3 : Trip booked (Waiting for your validation) -->
        <TextView
            android:text="Trip booked (Waiting for your validation)"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/tripRequestsBox"
            android:orientation="vertical"
            android:background="@drawable/bg_box_gray_rounded"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Container for list of trip requests -->
            <LinearLayout
                android:id="@+id/tripRequestsContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- SECTION 4 : Trip that you booked -->
        <TextView
            android:text="Trip that you booked"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/tripsBookedBox"
            android:orientation="vertical"
            android:background="@drawable/bg_box_gray_rounded"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Container for list of your booked trips -->
            <LinearLayout
                android:id="@+id/tripsBookedContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Logout button -->
        <Button
            android:id="@+id/buttonLogout"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_rounded_red"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
