<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back -->
        <ImageView
            android:id="@+id/backButton"
            android:src="@drawable/back"
            android:tint="@color/black"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp" />

        <!-- Avatar -->
        <ImageView
            android:id="@+id/driverAvatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_avatar_round"
            android:src="@drawable/ic_profile" />

        <!-- Name + rating on same line -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/driverName"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ratingStar"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_star_yellow" />

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_marginStart="4dp"
                    android:textSize="14sp"
                    android:textColor="#FFA000"
                    android:text="4.8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Car type -->
        <TextView
            android:id="@+id/carType"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Trip info -->
        <TextView
            android:id="@+id/departure"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/arrival"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/price"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Itinerary header (clickable) -->
        <LinearLayout
            android:id="@+id/itineraryHeader"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/itineraryTitle"
                android:text="Itinerary"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/itineraryToggle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@android:drawable/arrow_down_float"
                android:tint="#444444" />
        </LinearLayout>

        <!-- Itinerary content (expandable) -->
        <LinearLayout
            android:id="@+id/itineraryContent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Rempli dynamiquement en Kotlin -->
        </LinearLayout>

        <!-- Book button -->
        <Button
            android:id="@+id/buttonBook"
            android:text="Book this trip"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_button_rounded"
            android:layout_marginTop="24dp"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</ScrollView>
